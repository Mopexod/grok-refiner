{
  "manifest_version": 3,
  "name": "Grok Refiner",
  "description": "Control surface for Grok. Pin good fragments, refine iteratively without losing context.",
  "version": "0.1.0",
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": [
    "https://grok.com/*",
    "https://*.grok.com/*",
    "https://x.ai/*",
    "https://*.x.ai/*",
    "https://x.com/*",
    "https://*.x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/*",
        "https://*.grok.com/*",
        "https://x.ai/*",
        "https://*.x.ai/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js"],
      "matches": [
        "https://grok.com/*",
        "https://*.grok.com/*",
        "https://x.ai/*",
        "https://*.x.ai/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}